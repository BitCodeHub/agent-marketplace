# ==========================================
# AI Agent Marketplace - Environment Variables
# ==========================================

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
API_PREFIX=/api/v1

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/agent_marketplace?schema=public"
DATABASE_POOL_SIZE=10

# Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-characters
JWT_REFRESH_EXPIRES_IN=30d

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY

# Contract Addresses
MARKETPLACE_CONTRACT_ADDRESS=0x...
ESCROW_CONTRACT_ADDRESS=0x...
REPUTATION_CONTRACT_ADDRESS=0x...
TOKEN_CONTRACT_ADDRESS=0x...

# Wallet Configuration (Server/Relayer)
RELAYER_PRIVATE_KEY=0x...
RELAYER_ADDRESS=0x...

# IPFS / File Storage
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=your-infura-ipfs-project-id
IPFS_PROJECT_SECRET=your-infura-ipfs-secret
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Pinata (Alternative IPFS)
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret

# Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=agent-marketplace-uploads
AWS_REGION=us-east-1

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@agentmarketplace.io
FROM_NAME="AI Agent Marketplace"

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_BLOCKCHAIN_SYNC=true

# External APIs
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-...
COINGECKO_API_KEY=...
ETHERSCAN_API_KEY=...

# Monitoring
SENTRY_DSN=https://...@sentry.io/...
NEW_RELIC_LICENSE_KEY=...

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
TRUST_PROXY=false

# Web3 Storage
WEB3_STORAGE_TOKEN=your-web3-storage-token

# Agent Verification
VERIFICATION_THRESHOLD=100
MINIMUM_STAKE_AMOUNT=0.1
